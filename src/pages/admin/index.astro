---
/* Samostatná admin stránka – bez layoutu */
---
<!doctype html>
<html lang="cs">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Content Manager</title>
    <meta name="robots" content="noindex" />

    <!-- ruční inicializace Decapu -->
    <script>
      window.CMS_MANUAL_INIT = true;
    </script>

    <!-- Decap CMS UI -->
    <script src="https://unpkg.com/decap-cms@^3.0.0/dist/decap-cms.js"></script>

    <!-- Netlify Identity widget -->
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
  </head>
  <body>
    <script>
      // inicializace CMS
      function initCMS() {
        const cms = window.CMS;
        if (!cms) {
          console.error("Decap CMS script not loaded yet.");
          return;
        }
        cms.init({
          configPath: "config.yml", // relativně k /admin
        });
      }

      if (document.readyState === "loading") {
        document.addEventListener("DOMContentLoaded", initCMS);
      } else {
        initCMS();
      }

      // Auto-redirect do /admin po přihlášení přes Netlify Identity
      if (window.netlifyIdentity) {
        window.netlifyIdentity.on("init", function (user) {
          if (!user) {
            window.netlifyIdentity.on("login", function () {
              document.location.href = "/admin/";
            });
          }
        });

        // pokud není nikdo přihlášen, ukaž widget ručně
        if (!window.netlifyIdentity.currentUser()) {
          window.netlifyIdentity.open();
        }
      }
    </script>
  </body>
</html>





