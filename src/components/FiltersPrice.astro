---
const ranges = [
  { label: "Vše", min: "",   max: ""    },
  { label: "Do 5 000 Kč", min: "",   max: "5000" },
  { label: "5 000 – 10 000 Kč", min: "5000", max: "10000" },
  { label: "10 000 – 20 000 Kč", min: "10000", max: "20000" },
  { label: "20 000+ Kč", min: "20000", max: "" },
];
---
<div class="relative sm:block">
  <!-- tlačítko zůstává malé -->
  <button
    id="priceDropdownBtn"
    type="button"
    class="flex items-center justify-between rounded-full bg-black/60 px-4 py-2 text-sm text-white/80
           backdrop-blur-md ring-1 ring-white/20 shadow-md transition-colors hover:bg-white/20 hover:ring-white/30
           min-w-[90px]"   
  >
    <span id="priceDropdownLabel">Cena</span>
    <svg class="ml-2 h-4 w-4 text-white/70" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
      <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.17l3.71-3.94a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
    </svg>
  </button>

  <!-- menu může být širší -->
  <ul
    id="priceDropdownMenu"
    class="absolute z-50 mt-2 hidden w-[200px] overflow-hidden rounded-xl bg-black/70 backdrop-blur-md ring-1 ring-white/20 shadow-lg"
  >
    {ranges.map((r) => (
      <li>
        <button
          class="block w-full px-4 py-2 text-left text-sm text-white/80 hover:bg-white/20"
          data-price-min={r.min}
          data-price-max={r.max}
        >
          {r.label}
        </button>
      </li>
    ))}
  </ul>
</div>

