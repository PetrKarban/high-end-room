---
/* Filtry pro desktop */
---
<div class="flex flex-wrap items-center gap-2">
  <!-- Obuv -->
  <button
    data-filter="obuv"
    class="rounded-full bg-black/60 px-4 py-2 text-sm text-white/80
           backdrop-blur-md ring-1 ring-white/20 shadow-md transition-colors hover:bg-white/20 hover:ring-white/30"
  >
    Obuv
  </button>

<div class="relative">
  <button
    id="obleceniDropdownBtn"
    type="button"
    class="flex items-center justify-between rounded-full bg-black/60 px-4 py-2 text-sm text-white/80
           backdrop-blur-md ring-1 ring-white/20 shadow-md transition-colors hover:bg-white/20 hover:ring-white/30"
  >
    <span id="obleceniDropdownLabel">Oblečení</span>
    <svg class="ml-2 h-4 w-4 text-white/70" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
      <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.17l3.71-3.94a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
    </svg>
  </button>

  <ul
    id="obleceniDropdownMenu"
    class="absolute z-50 mt-2 hidden min-w-full overflow-hidden rounded-xl bg-black/70 backdrop-blur-md ring-1 ring-white/20 shadow-lg"
  >
    <li>
      <button data-subcategory-value="all" class="block w-full px-4 py-2 text-left text-sm text-white/80 hover:bg-white/20">
        Vše
      </button>
    </li>
    <li>
      <button data-subcategory-value="triko" class="block w-full px-4 py-2 text-left text-sm text-white/80 hover:bg-white/20">
        Trička
      </button>
    </li>
    <li>
      <button data-subcategory-value="mikina" class="block w-full px-4 py-2 text-left text-sm text-white/80 hover:bg-white/20">
        Mikiny
      </button>
    </li>
    <li>
      <button data-subcategory-value="bunda" class="block w-full px-4 py-2 text-left text-sm text-white/80 hover:bg-white/20">
        Bundy
      </button>
    </li>
  </ul>
</div>




  <!-- Batohy -->
  <button
    data-filter="batohy"
    class="rounded-full bg-black/60 px-4 py-2 text-sm text-white/80
           backdrop-blur-md ring-1 ring-white/20 shadow-md transition-colors hover:bg-white/20 hover:ring-white/30"
  >
    Batohy
  </button>

  <!-- Doplňky -->
  <button
    data-filter="doplnky"
    class="rounded-full bg-black/60 px-4 py-2 text-sm text-white/80
           backdrop-blur-md ring-1 ring-white/20 shadow-md transition-colors hover:bg-white/20 hover:ring-white/30"
  >
    Doplňky
  </button>
</div>