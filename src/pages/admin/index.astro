---
/* Samostatná admin stránka – bez layoutu */
---
<!doctype html>
<html lang="cs">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Content Manager</title>
    <meta name="robots" content="noindex" />

    <!-- Decap CMS UI -->
    <script src="https://unpkg.com/decap-cms@^3.0.0/dist/decap-cms.js"></script>

    <!-- Netlify Identity (pro Git Gateway přihlášení) -->
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>

    <!-- Řekneme Decapu, že init děláme manuálně (čistý JS) -->
    <script>
      window.CMS_MANUAL_INIT = true;
    </script>
  </head>
  <body>
    <script>
      // Inicializace Decap CMS
      function initCMS() {
        var cms = window.CMS;
        if (!cms) {
          console.error("Decap CMS script not loaded yet.");
          return;
        }
        cms.init({
          // relativně k /admin → načte /admin/config.yml
          configPath: "config.yml",
        });
      }

      if (document.readyState === "loading") {
        document.addEventListener("DOMContentLoaded", initCMS);
      } else {
        initCMS();
      }

      // Auto-reload po přihlášení přes Netlify Identity
      if (window.netlifyIdentity) {
        window.netlifyIdentity.on("init", function (user) {
          if (!user) {
            window.netlifyIdentity.on("login", function () {
              window.location.reload();
            });
          }
        });
      }
    </script>
  </body>
</html>



