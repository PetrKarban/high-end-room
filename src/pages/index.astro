---
/* samostatná admin stránka – bez layoutu a bez Netlify Identity */
---
<!doctype html>
<html lang="cs">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Content Manager</title>
    <meta name="robots" content="noindex" />
  </head>
  <body>
    <!-- Ruční init Decapu, ať se nenačítá nic z Netlify Identity -->
    <script>
      window.CMS_MANUAL_INIT = true;
    </script>

    <!-- Decap CMS UI -->
    <script src="https://unpkg.com/decap-cms@^3.0.0/dist/decap-cms.js"></script>

    <script>
      (function () {
        function initCMS() {
          if (!window.CMS) {
            console.error("Decap CMS script not loaded yet.");
            return;
          }
          window.CMS.init({
            // relativně k /admin -> tedy /admin/config.yml
            configPath: "config.yml",
          });
        }
        if (document.readyState === "loading") {
          document.addEventListener("DOMContentLoaded", initCMS);
        } else {
          initCMS();
        }
      })();
    </script>
  </body>
</html>
